{
  "name": "@ls-stack/react-utils",
  "description": "React-specific TypeScript utilities",
  "version": "0.2.0",
  "license": "MIT",
  "scripts": {
    "test:ui": "vitest --ui",
    "test": "vitest run",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "tsc:watch": "tsc -p tsconfig.prod.json --watch",
    "eslint": "CI=true eslint src/ --color --max-warnings=0 --fix",
    "build": "tsup",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "files": [
    "lib",
    "docs"
  ],
  "repository": "github:lucasols/utils",
  "homepage": "https://github.com/lucasols/utils/tree/main/packages/react-utils",
  "author": "Lucas Santos",
  "type": "module",
  "sideEffects": false,
  "main": "./lib/main.cjs",
  "module": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "exports": {
    ".": {
      "import": "./lib/main.js",
      "require": "./lib/main.cjs"
    },
    "./useConst": {
      "import": "./lib/useConst.js",
      "require": "./lib/useConst.cjs"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0||^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@ls-stack/extended-lint": "catalog:",
    "@testing-library/react": "^16.1.0",
    "@types/eslint": "catalog:",
    "@types/eslint__js": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "^19.0.8",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-unicorn": "catalog:",
    "eslint-plugin-vitest": "catalog:",
    "happy-dom": "^18.0.1",
    "prettier": "catalog:",
    "prettier-plugin-organize-imports": "catalog:",
    "react": "^18.3.1",
    "tsm": "catalog:",
    "tsup": "catalog:",
    "typedoc": "catalog:",
    "typedoc-plugin-markdown": "catalog:",
    "typedoc-plugin-missing-exports": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
