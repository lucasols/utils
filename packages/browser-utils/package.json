{
  "name": "@ls-stack/browser-utils",
  "description": "Browser-specific TypeScript utilities",
  "version": "3.18.0",
  "license": "MIT",
  "scripts": {
    "test:ui": "vitest --ui",
    "test": "vitest run",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "tsc:watch": "tsc -p tsconfig.prod.json --watch",
    "eslint": "CI=true eslint src/ --color --max-warnings=0 --fix",
    "format": "prettier --write .",
    "build": "pnpm test && pnpm lint && pnpm build:no-test && pnpm run docs && pnpm build:update-exports",
    "build:no-test": "tsup",
    "build:update-exports": "tsm --no-warnings scripts/updatePackageExports.ts",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "files": [
    "lib",
    "docs"
  ],
  "repository": "github:lucasols/utils",
  "homepage": "https://github.com/lucasols/utils/tree/main/packages/browser-utils",
  "author": "Lucas Santos",
  "type": "module",
  "sideEffects": false,
  "main": "./lib/main.cjs",
  "module": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "exports": {
    ".": {
      "import": "./lib/main.js",
      "require": "./lib/main.cjs"
    },
    "./blockWindowClose": {
      "import": "./lib/blockWindowClose.js",
      "require": "./lib/blockWindowClose.cjs"
    },
    "./domEvents": {
      "import": "./lib/domEvents.js",
      "require": "./lib/domEvents.cjs"
    },
    "./window": {
      "import": "./lib/window.js",
      "require": "./lib/window.cjs"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@ls-stack/utils": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@ls-stack/extended-lint": "catalog:",
    "@types/eslint": "catalog:",
    "@types/eslint__js": "catalog:",
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-unicorn": "catalog:",
    "eslint-plugin-vitest": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-organize-imports": "catalog:",
    "tsm": "catalog:",
    "tsup": "catalog:",
    "typedoc": "catalog:",
    "typedoc-plugin-markdown": "catalog:",
    "typedoc-plugin-missing-exports": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
